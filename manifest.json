{
  "manifest_version": 3,
  "name": "BrowseRhythm",
  "version": "1.0.0",
  "description": "Track your web activity with rhythm and style.",
  "permissions": [
    "tabs",
    "storage",
    "idle",
    "alarms",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BrowseRhythm"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}